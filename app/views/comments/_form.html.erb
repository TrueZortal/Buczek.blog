<%= turbo_frame_tag "comments" do %>
  <%= form_with url: post_comments_path do |form| %>
    <div>
      <%= form.text_area :user %>
      <%= form.label :user, "My name:" %>
    </div>
    <div>
      <%= form.text_area :body %>
      <%= form.label :body, "Comment:" %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>